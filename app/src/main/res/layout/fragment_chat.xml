<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center_vertical"
    tools:context=".ui.fragments.ChatFragment">


       <ImageView
           android:layout_width="250dp"
           android:layout_height="250dp"
           android:src="@drawable/chat"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Let's Chat"
           android:textStyle="bold"
           android:layout_gravity="center_vertical"
           android:gravity="center"
           android:textColor="@color/purple_500"
           android:textSize="35dp"
           />

       <EditText
           android:id="@+id/msg"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:paddingStart="15dp"
           android:paddingEnd="15dp"
           android:layout_marginTop="20dp"
           android:drawableStart="@android:drawable/sym_action_chat"
           android:drawableTint="@color/purple_500"
           android:drawablePadding="5dp"
           android:background="@drawable/shape_search_field"
           android:hint="Say Hello"
           android:maxLines="1"
           />

       <Button
           android:id="@+id/startChat"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:text="Start Chatting"
           android:layout_marginTop="25dp"
           android:background="@drawable/button_bg"
              />




</LinearLayout>